<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/imgDeleteWishOrchard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_delete_gray_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgPhotoWishOrchard"
        app:layout_constraintEnd_toStartOf="@+id/imgPhotoWishOrchard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgPhotoWishOrchard" />

    <ImageView
        android:id="@+id/imgPhotoWishOrchard"
        android:layout_width="68dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/logo_begreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtNamaeWishOrchard"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgPhotoWishOrchard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgPhotoWishOrchard"
        app:layout_constraintTop_toTopOf="@+id/imgPhotoWishOrchard"
        app:layout_constraintVertical_bias="0.51"
        tools:text="@string/app_name" />

    <ImageView
        android:id="@+id/imgMoreFromWishOrchard"
        android:layout_width="33dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/add_from_wish_list"
        app:layout_constraintBottom_toBottomOf="@+id/txtNamaeWishOrchard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtNamaeWishOrchard"
        app:layout_constraintTop_toTopOf="@+id/txtNamaeWishOrchard" />

</androidx.constraintlayout.widget.ConstraintLayout>